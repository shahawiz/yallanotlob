<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>

      <th>Order</th>
      <th>Restaurant</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <% if order.status != "cancelled" %>
      <tr>
        
        <td><%= order.name %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'View', user_order_path(order.user,order.id) %></td>
        <% if order.status != "finished" %>


        <td><%= link_to 'finish', edit_user_order_path(order.user,order.id) %></td>
        <td><%= link_to 'Cancel', user_order_path(order.user,order.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_user_order_path(@user) %>
